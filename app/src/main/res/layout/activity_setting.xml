<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgGrey">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/textRed">
        <RelativeLayout
            android:id="@+id/setting_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/detail_title"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textWhile"
            android:text="设 置"
            android:textSize="@dimen/text_20"/>
    </RelativeLayout>

    <com.github.financing.views.ReboundView.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgGrey"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bgWhile"
                android:padding="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textBlack"
                    android:textSize="@dimen/text_16"
                    android:text="账号"/>
                <TextView
                    android:id="@+id/setting_username"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textBlack"
                    android:textSize="@dimen/text_16"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/setting_login_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/text_16"
                android:padding="10dp"
                android:background="@color/bgWhile"
                android:drawableRight="@drawable/icon_right_an"
                android:text="修改登录密码"/>
            <TextView
                android:id="@+id/setting_trade_pw"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/text_16"
                android:padding="10dp"
                android:background="@color/bgWhile"
                android:drawableRight="@drawable/icon_right_an"
                android:text="设置交易密码"/>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textBlack"
                    android:textSize="@dimen/text_16"
                    android:padding="10dp"
                    android:background="@color/bgWhile"
                    android:text="当前版本号"/>
                <TextView
                    android:id="@+id/setting_version"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textBlack"
                    android:textSize="@dimen/text_16"
                    android:padding="10dp"
                    android:background="@color/bgWhile"
                    android:text="1.1.1"
                    />
            </LinearLayout>


            <TextView
                android:id="@+id/setting_logout"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/text_16"
                android:background="@color/bgWhile"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="退出当前账号"/>
        </LinearLayout>

    </com.github.financing.views.ReboundView.ReboundScrollView>
</LinearLayout>