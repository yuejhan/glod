<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgGrey">

    <RelativeLayout
        android:id="@+id/detail_title_inner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/textRed">
        <RelativeLayout
            android:id="@+id/detail_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/detail_title"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textWhile"
            android:text="新手标"
            android:textSize="@dimen/text_20"/>
    </RelativeLayout>

    <com.github.financing.views.ReboundView.ReboundScrollView
        android:layout_below="@id/detail_title_inner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgGrey"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/textRed"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/banyuan"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:id="@+id/detail_year_irr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/textWhile"
                        android:textSize="@dimen/text_30"
                        android:text="10.96%"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textWhile"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/padding_8"
                        android:textSize="@dimen/text_16"
                        android:text="预期年化收益率"
                        />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/bgWhile"
                    android:padding="14dp"
                    android:textColor="@color/textBlack"
                    android:layout_marginTop="8dp"
                    android:text="封闭期"
                    />
                <TextView
                    android:id="@+id/detail_period"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:background="@color/bgWhile"
                    android:padding="14dp"
                    android:textColor="@color/textBlack"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:background="@color/bgWhile"
                    android:padding="14dp"
                    android:textColor="@color/textBlack"
                    android:layout_marginTop="0.5dp"
                    android:text="起投金额"
                    />
                <TextView
                    android:id="@+id/detail_minimum"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:background="@color/bgWhile"
                    android:padding="14dp"
                    android:textColor="@color/textBlack"
                    android:layout_marginTop="0.5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:background="@color/bgWhile"
                    android:padding="14dp"
                    android:textColor="@color/textBlack"
                    android:layout_marginTop="0.5dp"
                    android:text="剩余可投"
                    />
                <TextView
                    android:id="@+id/detail_remain_amount"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:background="@color/bgWhile"
                    android:padding="14dp"
                    android:textColor="@color/textBlack"
                    android:layout_marginTop="0.5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/detail_description"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@color/bgWhile"
                    android:padding="14dp"
                    android:textColor="@color/textBlack"
                    android:drawableTop="@drawable/xiangxijieshao"
                    android:text="详情介绍"
                    />
                <TextView
                    android:id="@+id/detail_record"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@color/bgWhile"
                    android:padding="14dp"
                    android:textColor="@color/textBlack"
                    android:drawableTop="@drawable/jilv"
                    android:text="出借记录"/>
            </LinearLayout>

        </LinearLayout>
    </com.github.financing.views.ReboundView.ReboundScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/bgWhile"
        android:padding="20dp"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <EditText
            android:id="@+id/detail_investment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/text_20"
            android:inputType="numberSigned"
            android:gravity="center"
            android:hint="请输入金额"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textGrey"
                android:textSize="@dimen/text_13"
                android:text="预计收益"/>
            <TextView
                android:id="@+id/detail_investment_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textRed"
                android:textSize="@dimen/text_13"
                android:text="0.00"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textGrey"
                android:textSize="@dimen/text_13"
                android:text="元"/>
        </LinearLayout>

        <TextView
            android:id="@+id/detail_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_20"
            android:textColor="@color/textWhile"
            android:background="@color/textRed"
            android:gravity="center"
            android:padding="10dp"
            android:text="立即出借"
            />

    </LinearLayout>

</RelativeLayout>