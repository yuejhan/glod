<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bgGrey">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:textColor="@color/textWhile"
        android:textSize="@dimen/title_size"
        android:gravity="center"
        android:text="@string/title_product"
        android:background="@color/textRed"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/bgWhile"
        android:layout_marginBottom="1dp"
        >
        <TextView
            android:id="@+id/tab_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/drop_down_unselected"
            android:textSize="@dimen/text_13"
            android:gravity="center"
            android:singleLine="true"
            android:paddingLeft="5dp"
            android:paddingRight="50dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:drawablePadding="-50dp"
            android:drawableRight="@drawable/drop_down_unselected_icon"
            android:text="类型"
            />
        <TextView
            android:id="@+id/tab_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/drop_down_unselected"
            android:textSize="@dimen/text_13"
            android:gravity="center"
            android:singleLine="true"
            android:paddingLeft="5dp"
            android:paddingRight="50dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:drawablePadding="-50dp"
            android:drawableRight="@drawable/drop_down_unselected_icon"
            android:text="排序"
            />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/draw_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.financing.views.loadingView.SamplePtrFrameLayout
            android:id="@+id/product_frame_layout"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/product_recycler"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
                <include
                    android:id="@+id/product_comment_error"
                    layout="@layout/comment_error"/>
            </RelativeLayout>
        </com.github.financing.views.loadingView.SamplePtrFrameLayout>

        <View
            android:id="@+id/mask_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mask_color"
            android:visibility="gone"/>
        <FrameLayout
            android:id="@+id/draw_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            />
    </FrameLayout>

</LinearLayout>